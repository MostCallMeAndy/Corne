#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  ESC |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  |  \   |
// | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ENTR  |
//                    | GUI | LWR | BKSP|   | SPC | RSE  | ALT |
                        bindings = <
   &kp ESC   &kp Q &kp W &kp E &kp R &kp T   &kp Y     &kp U &kp I     &kp O   &kp P    &kp BSLH
   &kp LCTRL &kp A &kp S &kp D &kp F &kp G   &kp H     &kp J &kp K     &kp L   &kp SEMI &kp SQT
   &kp LSHFT &kp Z &kp X &kp C &kp V &kp B   &kp N     &kp M &kp COMMA &kp DOT &kp FSLH &kp RET
                   &kp LGUI  &mo 1 &kp BSPC  &kp SPACE &mo 2 &kp RALT
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |  `   |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  |  \   |
// | a+esc|     |     |     |     | HOME|   |  +  |  4  |  5  |  6  |  -  |  =   |
// | CPLK |BTCLR| BT1 | BT2 | BT3 | END |   |  *  |  1  |  2  |  3  |  /  |      |
//                    |c+a+d| LWR | BKSP|   | SPC | RSE  | ALT |
                        bindings = <
   &kp GRAVE  &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp N6    &kp N7    &kp N8 &kp N9 &kp N0   &kp BSLH
   &kp TAB    &trans       &trans       &trans       &trans       &kp HOME       &kp PLUS  &kp N4    &kp N5 &kp N6 &kp MINUS &kp EQUAL
   &kp CLCK   &bt BT_CLR   &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &kp END        &kp STAR &kp N1    &kp N2 &kp N3 &trans   &trans 
                          	        &kp LGUI     &trans       &kp BSPC       &kp SPACE &trans    &kp RALT
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |   ~  |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  |  |  |
// | CTRL |  {  |  }  |  (  |  )  |vol +|   |LEFT |DOWN | UP  |RIGHT|     |     |
// | SHFT |     |     |  [  |  ]  |vol -|   |     |     |     |     |     |     |
//                    | GUI | LWR | DEL |   | SPC | RSE | ALT |
                        bindings = <
   &kp TILDE &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT         &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp PIPE
   &kp LCTRL &kp LBRC &kp RBRC &kp LPAR &kp RPAR &kp C_VOL_UP    &kp LEFT  &kp DOWN  &kp UP          &kp RIGHT &trans &trans
   &kp LSHFT &trans   &trans &kp LBKT &kp RBKT &kp C_VOL_DN      &trans &trans &trans &trans &trans &trans 
                    	     &kp LGUI &trans   &kp DEL           &trans &kp SPACE    &kp RALT
                        >;
                };
        };
};
